<Window x:Class="MegaProduction.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClientWindow" Height="600" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Fichier">
                <MenuItem x:Name="MN_Ajouter" Click="MN_Ajouter_Click" Header="Ajouter"></MenuItem>
                <MenuItem x:Name="MN_Modifier" Click="MN_Modifier_Click" Header="Modifier"></MenuItem>
                <MenuItem x:Name="MN_Supprimer" Click="MN_Supprimer_Click" Header="Supprimer"></MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="MN_Fermer" Click="MN_Fermer_Click" Header="Fermer"></MenuItem>
            </MenuItem>
        </Menu>

        <ListBox Grid.Row="1" ItemsSource="{Binding Clients}" x:Name="listClients">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Libelle}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Window>
